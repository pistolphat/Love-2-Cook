<ul class="tweets">
  {{#each recipe}}
  <div class="card">
    <div class="card-content">
      <a class="card-title" href="/recipes/{{id}}">
        <strong>Name: </strong>{{ title }} <br>
        <strong>Ingredients: </strong>{{ ingredients }} <br>
        <strong>Instructions: </strong>{{ instructions }} <br>
      </a>
    </div>
  </div>
  {{/each}}
</ul>

