<section class="form-container">
  <h4>Add a new recipe</h4>
  <br>
  <form action="/recipes" method="POST">

    <div>
      <label class="headings" for="name">Name of Recipe:</label>
      <input type="text" name="title">
    </div>

    <div>
      <label class="headings" for="ingredients">Ingredients:</label>
      <input type="text" name="ingredients">
    </div>

    <div>
      <label class="headings" for="instructions">Instructions:</label>
      <input type="text" name="instructions">
    </div>

    <div class="input-field">
      <input type="submit" value="Submit" class="btn #2196f3 blue">
    </div>
  </form>
</section>

